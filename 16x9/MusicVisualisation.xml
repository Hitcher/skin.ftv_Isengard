<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol>-</defaultcontrol>
	<onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>
	<controls>
		<!-- Fanart -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<fadetime>400</fadetime>
			<colordiffuse>26ffffff</colordiffuse>
			<visible>IsEmpty(Window(Visualisation).Property(ArtistSlideshow))</visible>
			<texture fallback="special://skin/extras/backgrounds/music_visualiser.jpg" background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
		</control>
		<!-- Artist slideshow -->
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<fadetime>400</fadetime>
			<randomize>true</randomize>
			<aspectratio>scale</aspectratio>
			<timeperimage>10000</timeperimage>
			<colordiffuse>26ffffff</colordiffuse>
			<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
		</control>
		<!-- Visualisation -->
		<control id="2" type="visualisation">
			<include>FullscreenDimensions</include>
			<visible>IsEmpty(Visualisation.Enabled)</visible>
		</control>
		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(musicosd) + Player.ShowInfo</visible>
			<!-- Heading / Current item / Total items -->
			<control type="grouplist">
				<left>198</left>
				<top>134</top>
				<height>60</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<width>auto</width>
					<height>60</height>
					<font>Med48</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$LOCALIZE[10517]  </label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$INFO[MusicPlayer.PlaylistPosition]</label>
				</control>
				<control type="label">
					<top>14</top>
					<width>auto</width>
					<height>60</height>
					<font>Light36</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>|</label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Light32</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>$INFO[MusicPlayer.PlaylistLength]</label>
				</control>
			</control>
			<!-- Title -->
			<control type="label">
				<left>198</left>
				<top>200</top>
				<width>auto</width>
				<height>26</height>
				<font>Med26</font>
				<textcolor>ffbebebe</textcolor>
				<label>$INFO[MusicPlayer.Title]</label>
			</control>
			<!-- Cover -->
			<control type="image">
				<left>198</left>
				<top>836</top>
				<width>154</width>
				<height>154</height>
				<texture fallback="common/missing_image_cover.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio align="left" aligny="bottom">scale</aspectratio>
			</control>
			<!-- Details -->
			<control type="group">
				<left>392</left>
				<top>847</top>
				<!-- Album -->
				<control type="label">
					<width>auto</width>
					<height>40</height>
					<font>Med40</font>
					<textcolor>ffbebebe</textcolor>
					<label>$INFO[MusicPlayer.Album]</label>
				</control>
				<!-- Artist / Track -->
				<control type="label">
					<top>50</top>
					<width>auto</width>
					<height>40</height>
					<font>Light30</font>
					<textcolor>ffbebebe</textcolor>
					<label>$VAR[ArtistTrack]</label>
				</control>
				<!-- Time / Duration / Shuffle /Repeat -->
				<control type="grouplist">
					<top>98</top>
					<height>50</height>
					<itemgap>30</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>Light26</font>
						<aligny>bottom</aligny>
						<textcolor>ffdadada</textcolor>
						<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
					</control>
					<control type="image">
						<top>5</top>
						<width>26</width>
						<height>22</height>
						<texture>osd/visualistion_shuffle.png</texture>
						<visible>StringCompare(Playlist.Random,$LOCALIZE[590])</visible>
					</control>
					<control type="image">
						<top>5</top>
						<width>30</width>
						<height>22</height>
						<texture>osd/visualistion_repeat.png</texture>
						<visible>StringCompare(Playlist.Repeat,$LOCALIZE[593])</visible>
					</control>
					<control type="image">
						<top>5</top>
						<width>42</width>
						<height>22</height>
						<texture>osd/visualistion_repeat_1.png</texture>
						<visible>StringCompare(Playlist.Repeat,$LOCALIZE[592])</visible>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>