<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<zorder>2</zorder>
	<controls>
		<!-- Main group -->
		<control type="group">
			<include>NotificationAnimation</include>
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
			<centerleft>50%</centerleft>
			<top>26</top>
			<width>938</width>
			<height>163</height>
			<!-- Background image -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>100%</height>
				<texture border="4">dialogs/notification_back.png</texture>
			</control>
			<!-- Icon back -->
			<control type="image">
				<left>26</left>
				<top>26</top>
				<width>111</width>
				<height>111</height>
				<texture>dialogs/notification_busy.png</texture>
				<animation center="auto" condition="true" effect="rotate" end="-360" loop="true" reversible="false" time="1500">Conditional</animation>
			</control>
			<!-- Icon -->
			<control type="image">
				<left>26</left>
				<top>26</top>
				<width>111</width>
				<height>111</height>
				<texture>dialogs/notification_downloading.png</texture>
			</control>
			<!-- Heading -->
			<control id="30" type="label">
				<left>160</left>
				<top>42</top>
				<width>752</width>
				<height>31</height>
				<font>Light31</font>
				<textcolor>fff6f6f6</textcolor>
			</control>
			<!-- Details -->
			<control id="31" type="label">
				<left>160</left>
				<top>94</top>
				<width>752</width>
				<height>26</height>
				<font>Light26</font>
				<scroll>true</scroll>
				<haspath>true</haspath>
				<textcolor>fffbbb45</textcolor>
			</control>
		</control>
	</controls>
</window>