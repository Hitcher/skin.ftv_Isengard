<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- playercontrols -->
	<defaultcontrol always="true">1</defaultcontrol>
	<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !VideoPlayer.IsFullscreen + !Window.IsActive(Visualisation)</visible>
	<controls>
		<!-- Main group -->
		<control type="group">
			<include>NotificationAnimation</include>
			<centerleft>50%</centerleft>
			<top>26</top>
			<width>938</width>
			<height>163</height>
			<!-- Background image -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>100%</height>
				<texture border="4">dialogs/notification_back.png</texture>
			</control>
			<!-- Info -->
			<control type="image">
				<left>26</left>
				<top>26</top>
				<width>111</width>
				<height>111</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[MusicPlayer.Cover]</texture>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="image">
				<left>26</left>
				<top>26</top>
				<width>111</width>
				<height>111</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[VideoPlayer.Cover]</texture>
				<visible>Player.HasVideo</visible>
			</control>
			<!-- Heading -->
			<control type="label">
				<left>160</left>
				<top>42</top>
				<width>752</width>
				<height>31</height>
				<font>Light31</font>
				<textcolor>fff6f6f6</textcolor>
				<label>$INFO[Player.Title]</label>
			</control>
			<!-- Details -->
			<control type="label">
				<left>160</left>
				<top>94</top>
				<width>752</width>
				<height>26</height>
				<font>Light26</font>
				<scroll>true</scroll>
				<textcolor>fffbbb45</textcolor>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
				<visible>Player.HasAudio</visible>
			</control>
			<!-- Details -->
			<control type="label">
				<left>160</left>
				<top>94</top>
				<width>752</width>
				<height>26</height>
				<font>Light26</font>
				<scroll>true</scroll>
				<textcolor>fffbbb45</textcolor>
				<label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.TVShowTitle]$INFO[VideoPlayer.Artist, / ,]</label>
				<visible>Player.HasVideo</visible>
			</control>
		</control>
	</controls>
</window>