<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- screencalibration -->
	<defaultcontrol always="true">8</defaultcontrol>
	<controls>
		<!-- background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>special://skin/extras/backgrounds/calibration.png</texture>
		</control>
		<!-- Video window -->
		<control type="videowindow" id="20">
			<include>FullscreenDimensions</include>
		</control>
		<!-- Top left mover -->
		<control type="mover" id="8">
			<width>236</width>
			<height>236</height>
			<texturefocus>calibrate/focus.png</texturefocus>
		</control>
		<!-- Bottom right mover -->
		<control type="mover" id="9">
			<width>236</width>
			<height>236</height>
			<texturefocus flipx="true" flipy="true">calibrate/focus.png</texturefocus>
		</control>
		<!-- Subtitle position mover -->
		<control type="mover" id="10">
			<width>396</width>
			<height>8</height>
			<texturefocus>calibrate/subtitle.png</texturefocus>
			<texturenofocus colordiffuse="33ffffff">calibrate/subtitle.png</texturenofocus>
		</control>
		<!-- Pixel aspect ratio box -->
		<control type="resize" id="11">
			<left>20%</left>
			<texturefocus>calibrate/square.png</texturefocus>
			<texturenofocus colordiffuse="33ffffff">calibrate/square.png</texturenofocus>
			<aspectration>keep</aspectration>
		</control>
		<!-- Help information -->
		<control type="label" id="3">
			<left>598</left>
			<top>120</top>
			<height>200</height>
			<width>892</width>
			<font>Light60</font>
			<aligny>top</aligny>
			<wrapmultiline>true</wrapmultiline>
			<textcolor>ffdadada</textcolor>
		</control>
		<!-- Coordinates label -->
		<control type="label" id="2">
			<centerleft>50%</centerleft>
			<top>740</top>
			<height>200</height>
			<width>1920</width>
			<font>Light36Spaced</font>
			<align>center</align>
			<wrapmultiline>true</wrapmultiline>
			<textcolor>ffdadada</textcolor>
		</control>
	</controls>
</window>