<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home fade animation -->
	<include name="WindowHomeFadeAnimation">
		<animation effect="fade" end="100" start="0" time="200">WindowOpen</animation>
		<animation effect="fade" end="100" start="100" time="0">WindowClose</animation>
		<animation effect="fade" end="100" start="0" time="200" condition="!Window.IsActive(favourites)">Conditional</animation>
		<animation effect="fade" end="0" start="100" time="0" condition="Window.IsActive(favourites)">Conditional</animation>
	</include>
	<!-- Visible fade animation -->
	<include name="VisibleFadeAnimation">
		<animation effect="fade" end="100" start="0" time="200">Visible</animation>
		<animation effect="fade" end="0" start="100" time="200">Hidden</animation>
	</include>
	<!-- Visible delayed fade animation -->
	<include name="VisibleDelayFadeAnimation">
		<animation delay="200" easing="inout" effect="fade" end="100" start="0" time="120" tween="sine">Visible</animation>
		<animation effect="fade" end="0" start="100" time="0">Hidden</animation>
	</include>
	<!-- Notification fade animation -->
	<include name="NotificationAnimation">
		<animation easing="inout" effect="slide" end="0,0" start="0,-111" time="120" tween="sine">WindowOpen</animation>
		<animation easing="inout" effect="slide" end="0,-111" start="0,0" time="120" tween="sine">WindowClose</animation>
	</include>
	<!-- Dialog fade animation -->
	<include name="DialogAnimation">
		<animation easing="inout" effect="fade" end="100" start="0" time="120" tween="sine">WindowOpen</animation>
		<animation easing="inout" effect="fade" end="0" start="100" time="120" tween="sine">WindowClose</animation>
	</include>
	<!-- Dialog fade and zoom animation -->
	<include name="DialogZoomAnimation">
		<animation type="WindowOpen">
			<effect center="auto" end="100" start="90" time="120" type="zoom" />
			<effect easing="inout" end="100" start="0" time="120" tween="sine" type="fade" />
		</animation>
		<animation type="WindowClose">
			<effect center="auto" end="90" start="100" time="120" type="zoom" />
			<effect easing="inout" end="0" start="100" time="120" tween="sine" type="fade" />
		</animation>
	</include>
	<!-- Dialog video info animation -->
	<include name="DialogVideoInfoAnimation">
		<animation condition="Control.HasFocus(50) | Control.HasFocus(150) | Control.HasFocus(250) | Control.HasFocus(1000) | Control.HasFocus(5000)" effect="fade" end="6" start="100" time="200">Conditional</animation>
	</include>
	<!-- Home Widgets Animation -->
	<include name="HomeWidgetsAnimation">
		<animation condition="Container(9000).OnNext" reversible="false" type="Visible">
			<effect center="960,540" delay="280" easing="in" end="100" start="98" time="180" tween="sine" type="zoom" />
			<effect delay="280" easing="in" end="0,0" start="0,-40" time="180" tween="sine" type="slide" />
			<effect delay="280" easing="in" end="100" start="0" time="180" tween="sine" type="fade" />
		</animation>
		<animation condition="Container(9000).OnPrevious" reversible="false" type="Visible">
			<effect center="960,540" delay="280" easing="in" end="100" start="98" time="180" tween="sine" type="zoom" />
			<effect delay="280" easing="in" end="0,0" start="0,40" time="180" tween="sine" type="slide" />
			<effect delay="280" easing="in" end="100" start="0" time="180" tween="sine" type="fade" />
		</animation>
		<animation reversible="false" type="Hidden">
			<effect center="960,540" easing="out" end="98" start="100" time="180" tween="linear" type="zoom" />
			<effect easing="out" end="0" start="100" time="180" tween="linear" type="fade" />
		</animation>
		<animation condition="Window.IsVisible(1101)" reversible="false" type="Conditional">
			<effect easing="out" end="0,30" start="0,0" time="60" tween="sine" type="slide" />
			<effect delay="80" easing="out" end="0,-30" start="0,0" time="120" tween="sine" type="slide" />
		</animation>
		<animation condition="Window.IsVisible(1102)" reversible="false" type="Conditional">
			<effect easing="out" end="0,-30" start="0,0" time="60" tween="sine" type="slide" />
			<effect delay="80" easing="out" end="0,30" start="0,0" time="120" tween="sine" type="slide" />
		</animation>
	</include>
	<!-- Home menu slide animations -->
	<include name="HomeMenuSlideAnimation">
		<animation condition="IntegerGreaterThan(Container(9000).NumItems,12)" effect="slide" end="0,50" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,12)" effect="slide" end="0,18" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,11)" effect="slide" end="0,50" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,10)" effect="slide" end="0,82" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,9)" effect="slide" end="0,114" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,8)" effect="slide" end="0,146" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,7)" effect="slide" end="0,178" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,6)" effect="slide" end="0,210" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,5)" effect="slide" end="0,242" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,4)" effect="slide" end="0,274" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,3)" effect="slide" end="0,306" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,2)" effect="slide" end="0,338" time="0">Conditional</animation>
		<animation condition="StringCompare(Container(9000).NumItems,1)" effect="slide" end="0,370" time="0">Conditional</animation>
		<animation condition="Container(9000).Row(0)" effect="slide" end="0,0" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(1)" effect="slide" end="0,-11" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(2)" effect="slide" end="0,-22" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(3)" effect="slide" end="0,-33" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(4)" effect="slide" end="0,-44" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(5)" effect="slide" end="0,-55" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(6)" effect="slide" end="0,-66" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(7)" effect="slide" end="0,-77" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(8)" effect="slide" end="0,-88" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(9)" effect="slide" end="0,-99" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(10)" effect="slide" end="0,-110" time="200">Conditional</animation>
		<animation condition="Container(9000).Row(11)" effect="slide" end="0,-122" time="200">Conditional</animation>
	</include>
</includes>