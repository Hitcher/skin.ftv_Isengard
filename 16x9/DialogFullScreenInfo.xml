<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- fullscreeninfo -->
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(videoosd)</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<control type="image">
				<width>1980</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Movie title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  TV Show title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!-- Season/Episode number -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[PlayerEpisodeValue]</label>
				</control>
			</control>
			<!--  Episode title -->
			<control type="label">
				<left>20</left>
				<top>127</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>Light26</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>
				<visible>Player.Paused</visible>
				<animation type="Conditional" condition="System.IdleTime(2) + !Player.Caching" reversible="true">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
			</control>
			<!--  Cache bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.ProgressCache</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_cache.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!--  Progress bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>38</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]HD[/B]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>
				<!--  Resolution label -->
				<control type="label">
					<left>2</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold29</font>
					<textcolor>ffebebeb</textcolor>
					<label>$VAR[PlayerResolution]</label>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>45</bottom>
				<width>800</width>
				<height>30</height>
				<font>Reg27</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
	</controls>
</window>